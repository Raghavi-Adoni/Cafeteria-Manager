<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ordered_item_text_view_user_side"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Food Item"
        android:textSize="30sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/order_status_text_view_user_side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ordered_item_text_view_user_side"
        android:layout_marginTop="13dp"
        android:text="TextView"
        android:textSize="20sp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_status_text_view_user_side"
        android:id="@+id/user_side_okay_button"
        android:text="OK"
        android:layout_marginTop="15dp"/>




</RelativeLayout>