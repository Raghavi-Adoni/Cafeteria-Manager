<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <app:android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:translationZ="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        cardBackgroundColor="#DCDCDC">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="15dp">

    <TextView
        android:id="@+id/ordered_item_text_view_mess_side"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:text="Food Item"
        android:textColor="#000000"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/user_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingLeft="10dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ordered_item_text_view_mess_side"
        android:layout_marginTop="7dp"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/order_time_text_view"
        android:layout_width="wrap_content"
        android:paddingLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/user_text_view"
        android:layout_marginTop="13dp"
        android:text="TextView"
        android:textSize="20sp" />


        <Button
            android:id="@+id/cancel_order_button"
            android:layout_width="120dp"
            android:background="@drawable/spinner_menu_background"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_below="@+id/order_time_text_view"
            android:layout_marginTop="23dp"
            android:text="CANCEL" />

    <Button
        android:id="@+id/order_ready_button"
        android:layout_width="120dp"
        android:background="@drawable/spinner_menu_background"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cancel_order_button"
        android:layout_alignBottom="@+id/cancel_order_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="READY" />
    </RelativeLayout>
</app:android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
