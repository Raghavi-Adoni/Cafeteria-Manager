<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ordered_item_text_view_mess_side"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:text="Food Item"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/user_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ordered_item_text_view_mess_side"
        android:layout_marginTop="27dp"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/order_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/user_text_view"
        android:layout_marginTop="13dp"
        android:text="TextView"
        android:textSize="20sp" />

    <Button
        android:id="@+id/cancel_order_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/user_text_view"
        android:layout_alignRight="@+id/user_text_view"
        android:layout_below="@+id/order_time_text_view"
        android:text="CANCEL" />

    <Button
        android:id="@+id/order_ready_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cancel_order_button"
        android:layout_alignBottom="@+id/cancel_order_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="READY" />


</RelativeLayout>