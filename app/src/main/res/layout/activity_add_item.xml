<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.raghavi.messmanager.AddItemActivity">
    <TextView
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the food item's name: "
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/add_item_text_view"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/add_item_text_view"
        android:layout_marginTop="45dp"
        android:hint="name"
        android:id="@+id/add_item_edit_text"
        android:textSize="30sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_item_edit_text"
        android:layout_centerInParent="true"
        android:text="DONE"
        android:id="@+id/add_item_button"/>


</RelativeLayout>
